<%- include("partials/header") %>

<h2>Edit Expense</h2>

<form method="POST" action="/expenses/update/<%= expense._id %>">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <label>Title:</label>
  <input type="text" name="title" value="<%= expense.title %>" required>

  <label>Amount:</label>
  <input type="number" name="amount" step="0.01" value="<%= expense.amount %>" required>

  <label>Date:</label>
  <input type="date" name="date" value="<%= expense.date.toISOString().substring(0,10) %>" required>

  <label>Main Category:</label>
  <input type="text" name="mainCategory" value="<%= expense.mainCategory %>" required>

  <label>Sub Category:</label>
  <input type="text" name="subCategory" value="<%= expense.subCategory %>" required>

  <label>Description:</label>
  <textarea name="description"><%= expense.description %></textarea>

  <button type="submit">Update Expense</button>
</form>

<a href="/expenses">Cancel</a>

<%- include("partials/footer") %>
